import angular from 'angular';
import component from './{{ dashCase name }}.component';
{{#if routable}}
import uiRouter from 'angular-ui-router';
{{/if}}

const {{ camelCase name }}Module = angular
  .module('{{ pkg 'config.angularPrefix' }}.{{ camelCase name }}', [
{{#if routable}}
    uiRouter,
{{/if}}
  ])
{{#if routable}}

  .config($stateProvider => {
    'ngInject';

    $stateProvider
      .state('{{ camelCase name }}', {
        url: '/{{ dashCase name }}',
        component: '{{ pkg 'config.angularPrefix' }}{{ properCase name }}',
      });
  })
{{/if}}

  .component('{{ pkg 'config.angularPrefix' }}{{ properCase name }}', component)
;

export default {{ camelCase name }}Module.name;
